<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>GAMEVIA</title>
    <!-- Latest compiled and minified CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Kanit:wght@100;200;300;400;500;600;700;900&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Climate+Crisis&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="public/css/gamesCss.css" />
  </head>
  <body>
    <div
      id="navigation_bar"
      class="py-4 container-fluid d-flex justify-content-between sticky-top"
    >
      <button id="logo-button" type="button" class="btn btn-lg">
        Gamevia
      </button>

      <div id="middle-bar" class="row px-1 mt-0">
        <div class="col">
          <button
            onclick="document.location='#first-container'"
            class="btn btn-lg mt-0"
          >
            ABOUT
          </button>
        </div>
        <div class="col">
          <button
            onclick="window.location.href = 'services'"
            class="btn btn-lg mt-0"
          >
            SERVICES
          </button>
        </div>
        <div class="col">
          <button onclick="document.location='#footer'" class="btn btn-lg mt-0">
            CONTACT
          </button>
        </div>
        <!-- <div class="col">
                <button id="hang-out" class="btn btn-lg mt-0">HANG OUT</button>
            </div> -->
      </div>

      <button
        id="menu-button"
        type="button"
        class="btn btn-lg d-flex justify-content-around dropdown-toggle pt-3"
        data-bs-toggle="dropdown"
      >
        Menu
        <!-- <div id="menu-img-holder">
                <img id="menu-image" src="public/public/landingPage-assets/menu-32px.png" alt="">
            </div> -->
      </button>
      <ul class="dropdown-menu">
        <li><a class="dropdown-item" href="/logout-user">Sign Out</a></li>
        <li><a class="dropdown-item" href="services">Services</a></li>
      </ul>
    </div>

    <div id="first-container" class="py-4 px-2 d-flex justify-content-between">
      <h1 class="d-inline">Admin Access</h1>
      <div id="main-action-buttons" class="d-flex mx-5">
        <button
          id="load-button"
          type="button"
          class="btn btn- btn-outline-dark justify-content-around px-3 mx-2"
          onclick='window.location.href = "/add"'
        >
          <span>Add</span>
        </button>
        <button
          id="load-button"
          type="button"
          class="btn btn-smjustify-content-around bg-black px-3 mx-2"
          onclick='window.location.href = "/games"'
        >
          <span class="text-white">Load</span>
        </button>
      </div>
    </div>

    <table id="games-table" class="table table-striped table-dark rounded px-5">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Title</th>
          <th scope="col">Genre</th>
          <th scope="col">Date</th>
          <th scope="col">Time</th>
          <th scope="col">Registered Users</th>
          <th scope="col">Cover Image</th>

          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% for(let index = 0; index < games.length; index ++) { %>
        <tr>
          <th scope="row"><%= index + 1 %></th>
          <td><%= games[index].title%></td>
          <td><%= games[index].genre%></td>
          <td>
            <%= games[index].date.toLocaleDateString("en-US", { month: "short",
            day: "numeric", year: "numeric" }) %>
          </td>
          <td><%= games[index].time%></td>
          <td><%= games[index].registeredUsersCount %></td>
          <td>
            <img
              src="<%= games[index].image %>"
              alt="Game Image"
              style="
                background-position: center;
                background-repeat: no-repeat;
                background-size: cover;
                max-width: 300px;
              "
            />
          </td>
          <td>
            <button
              id="load-button"
              type="button"
              class="
                btn
                border
                btn-sm
                justify-content-around
                px-3
                border-dark border-3
              "
              onclick="window.location.href='/update/<%=games[index]._id%>'"
            >
              <span class="text-white">Update</span>
            </button>

            <button
              id="delete-button"
              type="button"
              class="
                btn
                border
                btn-sm
                justify-content-around
                px-3
                border-dark border-3
              "
              onclick=" window.location.href = '/delete/<%=games[index]._id%>'"
            >
              <span class="text-white">Delete</span>
            </button>
          </td>
        </tr>
        <% } %>

      </tbody>
    </table>



    <%- include('./footer') %> <% for (let index = 0; index < games.length;
    index++) { %>
    <script>
      console.log("Game Image Path:", "<%= games[index].image %>");
    </script>
    <% } %>
  </body>
</html>
